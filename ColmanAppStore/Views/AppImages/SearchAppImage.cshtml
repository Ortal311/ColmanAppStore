@model IEnumerable<ColmanAppStore.Models.AppImage>

@{
    ViewData["Title"] = "All app Images";
    <link rel="stylesheet" href="~/css/appImgStyle.css" />
}


<div class="row">
    <div class="col-lg-9 col-md-10">

        <h1 id="AppImageHeader">Search Results</h1>
    </div>

    <div class="col-lg-3 col-md-2">
        <form id="searchAppImage" asp-action="SearchAppImage" asp-controller="AppImages" class="d-flex">
            <input id="font" name="query" type="search" class="form-control" placeholder="Search by App Name" aria-label="Search" aria-describedby="search-addon" autocomplete="off" />
            <div id="slider-range"></div>
        </form>
    </div>
</div>


<p>
    <a class="btn btn-outline-info" asp-action="Create">Create New Image</a>
</p>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.App)
                </th>
                <th>
                    Edit
                </th>
                <th>
                    Details
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="@item.Image" class="card-img-top" alt="can't load image" id="Img">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.App.Name)
                    </td>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <h2 class="text-center" id="PageHeader">Sorry, you don't have any app images with that name</h2>
    <br />
}