@model ColmanAppStore.Models.User

@{
    ViewData["Title"] = "Account";

}


<h1 style="font-family: 'Days One', sans-serif;text-align:center"> My Account</h1>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- My Account Page Start -->
            <div class="myaccount-page-wrapper">
                <!-- My Account Tab Menu Start -->
                <div class="row">
                    <div class="col-lg-3 col-md-4">
                        <div class="myaccount-tab-menu nav" role="tablist">

                            <a href="#orders" data-toggle="tab" class="">Orders</a>
                            <a href="#payment-method" data-toggle="tab">Payment Method</a>
                            <a href="#account-info" data-toggle="tab" class=""> Account Details</a>
                            <a asp-action="Logout" asp-controller="Users">Logout</a>
                        </div>
                    </div>
                    <!-- My Account Tab Menu End -->
                    <!-- My Account Tab Content Start -->
                    <div class="col-lg-9 col-md-8">
                        <div class="tab-content" id="myaccountContent">

                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="orders" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Orders</h3>
                                    <div class="myaccount-table table-responsive text-center">
                                        @{
                                            if (Model != null)
                                            {
                                                if (Model.AppListUser.Count == 0)
                                                {
                                                    <h4>You have not purchased any apps yet </h4>
                                                }
                                                else
                                                {
                                                    <table class="table table-bordered">
                                                        <thead class="thead-light">
                                                            <tr>
                                                                <th>Order Number</th>
                                                                <th>App</th>
                                                                <th>Price</th>
                                                                <th>View App</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in Model.AppListUser)
                                                            {
                                                                int i = 1;
                                                                <tr>
                                                                    <td>i</td>
                                                                    <td>@item.Name</td>
                                                                    <td>@item.Price</td>
                                                                    <td><a asp-action="details" asp-controller="Apps" asp-route-id="@item.Id" class="btn btn-primary">View App </a></td>
                                                                </tr>
                                                                i++;
                                                            }

                                                        </tbody>

                                                    </table>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="payment-method" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Payment Method</h3>
                                    @{
                                        if (Model != null)
                                        {
                                            if (Model.PaymentMethods.Count == 0)
                                            {
                                                <h4>You did not enter credit card information</h4>
                                            }
                                            else
                                            {
                                                <table class="table table-bordered">
                                                    <thead class="thead-light">
                                                        <tr>
                                                            <th>Card Number</th>
                                                            <th>Name</th>
                                                            <th>View Full Details</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.PaymentMethods)
                                                        {

                                                            <tr>
                                                                <td>@item.CardNumber</td>
                                                                <td>@item.NameOnCard</td>
                                                                <td><a asp-action="details" asp-controller="Payments" asp-route-id="@item.Id" class="btn btn-primary"> Details </a></td>
                                                            </tr>

                                                        }

                                                    </tbody>

                                                </table>
                                            }
                                        }
                                    }

                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="account-info" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Account Details</h3>
                                    <div class="account-details-form">
                                        @{
                                            if (Model != null)
                                            {
                                                <!--asp-route-id needs to USER ID!!!!!!!-->
                                                <a asp-action="Edit" asp-controller="Users" asp-route-id="@Model.Id">Edit </a>


                                            }
                                        }

                                    </div>
                                </div>
                            </div> <!-- Single Tab Content End -->
                        </div>
                    </div> <!-- My Account Tab Content End -->
                </div>
            </div> <!-- My Account Page End -->
        </div>
    </div>
</div>