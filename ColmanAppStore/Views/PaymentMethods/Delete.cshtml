@model ColmanAppStore.Models.PaymentMethod

@{
    ViewData["Title"] = "Delete";
    <link rel="stylesheet" href="~/css/paymentMethodStyle.css" />
}

<h1 id="PageHeader">Delete payment method</h1>

<h4 id="subTitleHeader">Are you sure you want to delete this?</h4>
<div>
    <hr />
    <div class="card_payment col-12" id="cardDetails">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.NameOnCard)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.NameOnCard)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.CardNumber)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.CardNumber)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.ExpiredDate)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.ExpiredDate)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.CVV)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.CVV)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.IdNumber)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.IdNumber)
                </dd>
            </dl>
            <br />
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>