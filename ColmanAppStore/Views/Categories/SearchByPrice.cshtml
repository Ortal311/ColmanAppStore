@model IEnumerable<ColmanAppStore.Models.App>
@using ColmanAppStore.Models

@{
    ViewData["Title"] = "All apps";
    <link rel="stylesheet" href="~/css/appStyle.css" />
}

<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Days+One&family=Indie+Flower&display=swap" rel="stylesheet">
<div class="row">
    <div class="col-9">
        <h1 id="AppSearchHeader">Search by price result</h1>
    </div>

    <div class="col-3">
        <form id="searchprice" asp-action="SearchByPrice" asp-controller="Categories" class="d-flex">
            <input id="font" name="query" type="search" class="form-control" placeholder="Search by price" aria-label="Search" aria-describedby="search-addon" autocomplete="off" />
            <div id="slider-range"></div>
        </form>
    </div>

</div>


<div class="container px-3" id="LayoutBG">
    <div class="row justify-content-center">

        @foreach (var item in Model)
        {
            <div class="card col-3" id="AppCard">
                <div class="card-body">
                    <img src="@item.Logo.Image" class="card-img-top" id="AppLogo" alt="can't load image">
                    <h5 class="card-title" id="AppTitle">@item.Name</h5>
                    <p class="card-text">Price: @item.Price ₪</p>
                    <p class="card-text">Size: @item.Size MB</p>
                    <p class="card-text">Rate: @string.Format("{0:0.00}", item.AverageRaiting)  <span> &#9733; </span> </p> @* star symbol *@
                    <a href="/Apps/Details/@item.Id" class="btn btn-primary stretched-link" id="AppButton">More info</a>
                </div>
            </div>
        }
    </div>
</div>