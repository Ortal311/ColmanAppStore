<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ColmanAppStore</title>

    <!-- CSS only -->
    <!-- <link rel="stylesheet" href="~/css/style.css" /> -->
    <link rel="stylesheet" href="/css/site.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--<script src="~/lib/jquery/dist/jquery.js"></script>-->

</head>

<body >

    <header>
        <div class="header container-fluid">
            <div class="d-flex justify-content-between">
                <div class="row header__row align-items-center">
                    <div class="col-sm-2" style="text-align:center">
                        <a class="logoStyle" asp-action="HomePage" asp-controller="Apps">
                            <img class="logo" src="~/LogoImage/ColmanAppStoreLogo.jpg" alt="logo" style="max-width: 40%;margin:auto;" />

                            @*<h1>LOGO</h1>*@
                        </a>
                    </div>
                    <div class="col-sm-8">
                        <div class="input-group rounded justify-content-center">
                            <form asp-action="Search" asp-controller="Apps" class="d-flex">
                                <input name="query" type="search" class="form-control" placeholder="Search " style="font-family: 'Nunito' , sans-serif;font-size:medium" aria-label="Search" aria-describedby="search-addon" autocomplete="off" />
                                <!-- <select class="form-select">
                                    <option id="option1" value="1">By Name</option>
                                    <option id="option2" value="2">By Category</option>
                                    <option id="option3" value="3">By Price</option>
                                </select>-->
                                <div id="slider-range"></div>
                                <a asp-action="Search" asp-controller="Apps" class="btn btn-primary btn_search">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" class="bi bi-search" viewBox="0 0 18 18">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                    </svg>

                                </a>
                            </form>
                        </div>
                    </div>

                    <div class="col-sm-2 header d-flex justify-content-center">
                        @if (Context.User.Identity != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                        {
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false" style="font-family: 'Nunito' ;font-size:medium">
                                    Hello @User.Identity.Name!

                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a asp-action="Account" asp-controller="Users" asp-route-id="@User.Identity.Name"  style="font-family: 'Nunito' , sans-serif;font-size:medium">My Account</a></li>
                                    <li><a asp-action="Logout" asp-controller="Users" style="font-family: 'Nunito' , sans-serif;font-size:medium">Logout</a></li>

                                </ul>
                            </div>

                        }
                        else
                        {
                            <a asp-action="Login" asp-controller="Users" class="btn btn-primary btn_login" style="font-family: 'Nunito' ;font-size:medium">Login</a>
                            <a asp-action="Register" asp-controller="Users" class="btn btn-primary btn_signup" style="font-family: 'Nunito' ;font-size:medium"> SignUp</a>
                        }

                    </div>
                </div>
            </div>
        </div>
    </header>

    <main>
        <div class="d-flex ">
            <!--align-items-stretch-->
            <div class="row">
                <aside class="col-sm-2 col-navbar">

                    <div class="d-flex align-items-stretch">
                        <link rel="preconnect" href="https://fonts.gstatic.com">
                        <link href="https://fonts.googleapis.com/css2?family=Days+One&family=Indie+Flower&family=Nunito:wght@700;800&display=swap" rel="stylesheet">

                        <nav class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <!-- <button class="nav-link active" id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#v-pills-home" type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">Home</button>-->
                            <a id="col-btn" class="btn btn-primary " asp-action="HomePage" asp-controller="Apps" style="font-family: 'Nunito' , sans-serif;font-size:medium">Home</a>

                            <a class="btn_categories" asp-action="index" asp-controller="Categories"><h2 class="dropdown-header align-self-center" style="font-family: 'Nunito' , sans-serif;font-size:medium">Categories</h2></a>
                            <a id="col-btn" class="btn btn-primary" asp-action="details" asp-controller="Categories" asp-route-id="4" style="font-family: 'Nunito' , sans-serif;font-size:medium">News</a>
                            <a id="col-btn" class="btn btn-primary" asp-action="details" asp-controller="Categories" asp-route-id="3" style="font-family: 'Nunito' , sans-serif;font-size:medium">Social</a>
                            <a id="col-btn" class="btn btn-primary" asp-action="details" asp-controller="Categories" asp-route-id="2" style="font-family: 'Nunito' , sans-serif;font-size:medium">Sport</a>
                            <a id="col-btn" class="btn btn-primary" asp-action="details" asp-controller="Categories" asp-route-id="1" style="font-family: 'Nunito' , sans-serif;font-size:medium">Kids</a>
                            <a id="col-btn" class="btn btn-primary" asp-action="details" asp-controller="Categories" asp-route-id="5" style="font-family: 'Nunito' , sans-serif;font-size:medium">Games</a>
                            <a id="col-btn" class="btn btn-primary" asp-action="details" asp-controller="Categories" asp-route-id="6" style="font-family: 'Nunito' , sans-serif;font-size:medium">Shopping</a>

                        </nav>

                    </div>
                </aside>

                <div class="col-sm-10 col-lines" @*id="LayoutBG"*@>
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
        </div>
    </main>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2021 - ColmanAppStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -
            <a asp-area="" asp-controller="Home" asp-action="About">About Us</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

</body>
</html>
