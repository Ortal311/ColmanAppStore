<center>

    <div id="carouselExampleIndicators1" class="carousel slide" data-ride="carousel data-interval=" false"">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators1" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators1" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators1" data-slide-to="2"></li>
        </ol>
        <div class="row justify-content-between mt-4">
            <h1 class="text-center" style="font-family:fantasy">Top Rated</h1>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="card" style="width: 500px;">
                        <img src="@Model.ElementAt(0).Logo" class="card-img-top" alt="can't load image" style="max-width: 50%">
                        <div class="card-body">
                            <h5 class="card-title">@Model.OrderByDescending(r => r.AverageRaiting).ElementAt(0).Name</h5>
                            <h6 class="card-title">Price: @Model.OrderByDescending(r => r.AverageRaiting).ElementAt(0).Price</h6>
                            <h6 class="card-title">Raiting:@Model.OrderByDescending(r => r.AverageRaiting).ElementAt(0).AverageRaiting</h6>
                            <a asp-action="details" asp-controller="Apps" asp-route-id="@Model.OrderByDescending(r => r.AverageRaiting).ElementAt(0).Id" class="btn btn-primary">View App </a>
                        </div>
                    </div>
                </div>

                @for (int i = 1; i < 3; i++)
                {
                    <div class="carousel-item">
                        <div class="card" style="width: 500px; ">
                            <img src="@Model.ElementAt(i).Logo" class="card-img-top" alt="can't load image" style="max-width: 50%">
