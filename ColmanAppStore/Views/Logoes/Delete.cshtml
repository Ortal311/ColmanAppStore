@model ColmanAppStore.Models.Logo

@{
    ViewData["Title"] = "Delete logo";
    <link rel="stylesheet" href="~/css/logoStyle.css" />
}

<h1 id="PageHeader">Delete logo</h1>

<h4 id="subTitleHeader">Are you sure you want to delete this?</h4>
<div>
    <h4>Logo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Image)*@
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" class="card-img-top" alt="can't load image" id="Img">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apps)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apps.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
