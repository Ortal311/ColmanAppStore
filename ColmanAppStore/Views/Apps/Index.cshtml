<div class="container px-3">
    <div class="row align-items-center">
        @foreach (var item in Model)
        {
            <div class="card col-3" style="width: 18rem;margin-right: 10px;margin-left:10px;margin-bottom:10px">
                <div class="card-body">
                    <center><img src="@item.Logo.Image" class="card-img-top" alt="can't load image" style="max-width: 50%;"></center>
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Price: @item.Price</p>
                    <p class="card-text">Size: @item.Size MB</p>
                    <a href="/Apps/Details/@item.Id" class="btn btn-primary">More info</a>
                </div>
            </div>
        }
    </div>
</div>
