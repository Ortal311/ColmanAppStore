@model ColmanAppStore.Models.App

@{
    ViewData["Title"] = Model.Name;
}

<center>
    <div class="card_app col-12" style="width: 50rem;
        margin-top: 10px;
        margin-right: 10px;
        margin-left: 10px;
        margin-bottom: 10px;">

        <center><img src="@Model.Logo.Image" class="card-img-top" alt="can't load image" style="max-width: 15%;"></center>
        <div class="card-body">
            <h4 class="card-title" style="font-family:cursive;font-weight:bold">@Model.Name</h4>
            <p class="card-text" style="text-align:left"> <b>Price: </b> @Model.Price ₪ </p>
            <p class="card-text" style="text-align:left"> <b>App size: </b> @Model.Size MB </p>

            <p class="card-text" style="text-align:left"> <b>Description: </b> @Model.Description</p>
            <p class="card-text" style="text-align:left"> <b>Publish date: </b> @Model.publishDate.Date</p>
            <p class="card-text" style="text-align:left"> <b>Developer name: </b> @Model.DeveloperName</p>


            <!-- Adding pics & videos carousel -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                </ol>

                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model.Images.First().Image" style="height:400px;max-width:350px" alt="@Model.Images.First().Name slide"> @*//;max-height:300px;max-width:40%*@
                    </div>
                    @foreach (var item in Model.Images)
                    {
                        if (!item.Name.Last().Equals('1')) //not the first img in the app
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@item.Image" style="height:400px;max-width:350px" alt="@item.Name slide">
                            </div>
                        }
                    }
                    <div class="carousel-item">
                        <iframe class="d-block w-100" src="@Model.Videos.First().Video" style="height:400px" frameborder="0" allowfullscreen></iframe>
                    </div>



                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>


                </div>
            </div>



            <!-- Adding rating -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
            <div class="d-flex justify-content-center">
                <div class="content text-center">
                    <div class="ratings" style="background-color: #fff; padding: 30px; border: 1px solid rgba(0, 0, 0, 0.1); box-shadow: 0px 10px 10px #E0E0E0">
                        <span class="product-rating" style="font-size: 50px"> @Model.AverageRaiting </span><span>/5</span>
                        <div class="stars" style="font-size: 18px; color: #28a745">
                            @for (int i = 0; i < (int)Model.AverageRaiting; i++)
                            {
                                <i class="fa fa-star checked" style="color:orange"></i>
                            }
                            @for (int i = 0; i < 5 - (int)Model.AverageRaiting; i++)
                            {
                                <i class="fa fa-star" style="color:black"></i>
                            }
                        </div>
                        @if (Model.Review == null)
                        {
                            <div class="rating-text" style="margin-top: 10px"><span>@Model.countReview ratings & 0 reviews</span> </div>

                        }
                        else
                        {
                            <div class="rating-text" style="margin-top: 10px"><span>@Model.countReview ratings & @Model.Review.Count() reviews</span> </div>
                        }
                        <a href="/Reviews/Create" class="btn btn-primary" style="margin-bottom:10px;margin-top:50px">Add review</a>
                    </div>
                </div>
            </div>


            <!-- Adding review -->
            @if (Model.Review != null)
            {
                foreach (var item in Model.Review)
                {
                    <div class="card" style="border-radius: 5px; background-color: #fff; padding-left: 30px; padding-right: 30px; margin-top: 10px; padding-top: 10px; padding-bottom: 10px">
                        <div class="row d-flex">
                            <div class="col-md-2"> <img class="profile-pic" src="https://www.pngkit.com/png/detail/281-2812821_user-account-management-logo-user-icon-png.png" style="width:100px;height:80px;border-radius: 100%; margin-top:10px;margin-left:-50px"> </div>
                            <div class="col-md-4">
                                <div class="d-flex flex-column">
                                    <p class="mt-2 mb-0" style="font-weight:bold;text-align:left"> User name @*@item.UserName.Name*@</p> @*no user name in DB yet*@
                                    <div>
                                        <p class="text-left">
                                            <span class="text-muted">@item.Raiting</span>
                                            @for (int i = 0; i < (int)item.Raiting; i++)
                                            {
                                                <i class="fa fa-star checked" style="color:orange"></i>
                                            }
                                            @for (int i = 0; i < 5 - (int)item.Raiting; i++)
                                            {
                                                <i class="fa fa-star" style="color:black"></i>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">   <p class="text-muted pt-5 pt-sm-3" style="text-align:right;margin-right:-50px">@item.PublishDate</p>  </div>
                        </div>
                        <div class="row text-left">
                            <h4 class="blue-text mt-3">@item.Title</h4>
                            <p class="content" style=" font-size: 14px">@item.Body</p>
                        </div>
                    </div>
                }
            }

            <div style="margin-top:10px">
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>


        </div>
    </div>
</center>


