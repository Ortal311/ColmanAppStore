@model ColmanAppStore.Models.App

@{
    ViewData["Title"] = "Details";
}


<center>
    <div class="card_app col-12" style="width: 50rem;
        margin-top: 10px;
        margin-right: 10px;
        margin-left: 10px;
        margin-bottom: 10px;">

        <center><img src="@Model.Logo.Image" class="card-img-top" alt="can't load image" style="max-width: 15%;"></center>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text" style="text-align:left">Price: @Model.Price ₪</p>
            <p class="card-text" style="text-align:left">App size: @Model.Size MB</p>

            <p class="card-text" style="text-align:left">Description: @Model.Description</p>
            <p class="card-text" style="text-align:left">Publish date: @Model.publishDate.Date</p>
            <p class="card-text" style="text-align:left">Developer name: @Model.DeveloperName</p>


            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                </ol>

                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model.Images.First().Image" style="max-height:300px;max-width:40%" alt="@Model.Images.First().Name slide">
                    </div>
                    @foreach (var item in Model.Images)
                    {
                        if (!item.Name.Last().Equals('1')) //not the first img in the app
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@item.Image" style="max-height: 300px;max-width:40%" alt="@item.Name slide">
                            </div>
                        }
                    }
                    <div class="carousel-item">
                        <iframe class="d-block w-100" src="@Model.Videos.First().Video" style="height:300px" frameborder="0" allowfullscreen></iframe>
                    </div>

              
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                @*pics
                    videos
                    average rate
                    comments*@

                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>


            </div>
        </div>
    </div>
</center>


